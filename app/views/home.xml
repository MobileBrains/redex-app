<Alloy>
    <Window id="HomeWindow">
        <TitleControl platform="ios">
            <View id="titleView">
                <Label id="titleLabel"/>
            </View>
        </TitleControl>
        <ListView id="listView" defaultItemTemplate="default">
            <Templates>
                <ItemTemplate name="default">
                    <View id="order">
                        <View id="left">
                            <Label id="order_serial" bindId="order_serial"/>
                        </View>
                        <View id="middle">
                            <Label id="order_internal_guide" bindId="order_internal_guide"/>
                            <Label id="order_destinatary" bindId="order_destinatary"/>
                            <Label id="order_address" bindId="order_address"/>
                        </View>
                        <View id="right">
                            <Label id="order_state" bindId="order_state"/>
                        </View>
                    </View>
                </ItemTemplate>
            </Templates>
            <SearchBar id="listSearch" platform="android"/>
            <ListSection id="listSection"/>
        </ListView>
    </Window>
</Alloy>