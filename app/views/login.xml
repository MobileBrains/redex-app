<Alloy>
    <Window id="LoginWindow">
        <ScrollView id="scrollView">
          <View id="fields">
            <View class="field">
              <Label class="fieldIcon" id="emailIcon"/>
              <TextField class="fieldText" id="email"/>
            </View>
            <View class="field">
              <Label class="fieldIcon" id="passIcon"/>
              <TextField class="fieldText" id="pass"/>
            </View>
            <Button id="send"/>
          </View>
        </ScrollView>
    </Window>
</Alloy>